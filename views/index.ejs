        text-align: center;
        justify-content: center;
        align-items: center;
        font-style: italic;
      }

      .homeContainer a:link {
        text-decoration: underline;
        color: white;
      }
      .homeContainer a:hover {
        color: rgb(86, 83, 83);
      }

      .homeContainer a:visited {
        color: rgb(86, 83, 83);
      }

      .bigImage {
        display: none;
      }
