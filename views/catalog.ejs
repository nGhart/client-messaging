<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
     <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Grandiflora+One&family=Waterfall&display=swap"
      rel="stylesheet"
    />
    <style>
      .menuItems {
  margin-bottom: 100px;
}
.title h1 {
  margin-top: 35px;
  margin-bottom: 10px;
  color: #d6970a;
    font-family: 'Abril Fatface', cursive;
}
.filterButtons:hover {
  background-color: #d6970a;
}

.cardHeight {
  margin: 10px;
}
img {
  border: 2px solid #d6970a;
}

.itemNprice {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-family: 'Abril Fatface', cursive;
}

.price {
  font-size: 18px;
}
.filterButtons {
  width: 100px;
  border: none;
  border-radius: 20px;
  color: white;
  padding: 5px;
  margin: 10px;
  background-color: pink;
  font-family: 'Abril Fatface', cursive;
}

.filterButtons:hover {
  background-color: #d6970a;
}
    </style>
  </head>
  <body>
    <h1 class="text-center title"><%= title %></h1>

    <div class="container"> 
      <div class="row">

        <% goods.forEach(function(good,index) { %>
          <div class="col col-sm-6 col-lg-4">
            <div class="card cardHeight">
             <div class="row">
               <div class="col col-sm-4">
                <img src="<%=good.img%>" class="card-img-top" alt="<%=good.title %>" width="100%"
                        height="100%"/>
               </div>
              <div class="col col-sm-8">
                <div class="card-body ">
                <h5 class="card-title itemNprice"><%= good.title %> <span class="price">GHC <%= good.price %></span></h5>
               
                <p class="card-text itemNprice">Category: <span style="text-transform: capitalize;"><%= good.category %></span></p>
                <p class="card-text">
                  Lorem ipsum dolor sit amet, consectetuer adipiscing
                          elit.
                </p>
            
                <p>
                  <form method="POST" action="/addToCart">
                    <div class="container">
                      <input type="hidden" name="id" value="<%=good.id%>"/>
                      <div class="row ">
                       
                        <input type="submit" value="Add to Cart" class="filterButtons"/>
                      </div>
                    </div>
                  </form>
                </p>
              </div>
              </div>
             </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="javascripts/data.js"></script>

  </body>
</html>