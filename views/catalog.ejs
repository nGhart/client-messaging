<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
     <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Grandiflora+One&family=Waterfall&display=swap"
      rel="stylesheet"
    />
    <style>
      .menuItems {
  margin-bottom: 100px;
}
.title h1 {
  margin-top: 35px;
  margin-bottom: 10px;
  color: #d6970a;
}
.filterButtons:hover {
  background-color: #d6970a;
}
.search {
  border-radius: 20px;
  border: none;
  width: 300px;
  padding: 2px 2px 2px 5px;
  margin-bottom: 20px;
}
.cardHeight {
  height: 200px;
}
.sorrySection {
  background-color: rgba(255, 192, 203, 0.187);
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-bottom: 70px;
}
.sorryContainer {
  display: flex;
  justify-content: center;
  align-items: center;
}
.sorryContainer img {
  border: none;
  margin-top: 30px;
  width: 50px;
}
.sorryContainer h2 {
  font-family: 'Abril Fatface', cursive;
  margin-top: 35px;
}
img {
  border: 2px solid #d6970a;
}

.itemNprice {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-family: 'Abril Fatface', cursive;
}

.price {
  font-size: 18px;
}
    </style>
  </head>
  <body>
    <h1 class="text-center title"><%= title %></h1>

    <div class="container"> 
      <div class="row">

        <% goods.forEach(function(good,index) { %>
          <div class="col col-3">
            <div class="card">
              <img src="<%=good.img%>" class="card-img-top" alt="<%=good.title %>"/>
              <div class="card-body">
                <h5 class="card-title"><%= good.title %></h5>
                <p class="card-text">Price: GHC <%= good.price %></p>
                <p class="card-text">Category: <%= good.category %></p>
                <p>
                  <form method="POST" action="/buyTicket">
                    <div class="container">
                      <input type="hidden" name="id" value="<%=good.id%>"/>
                      <div class="row gx-5">
                       
                        <input type="submit" value="Add to Cart" class=""/>
                      </div>
                    </div>
                  </form>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="javascripts/data.js"></script>

  </body>
</html>